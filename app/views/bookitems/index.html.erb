<p id="notice"><%= notice %></p>

<h1>Bookitems</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Author</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookitems.each do |bookitem| %>
      <tr>
        <td><%= bookitem.title %></td>
        <td>
          <img src="<%= bookitem.avatar %>" alt="Mountain View" style="width:304px;height:228px;">
        </td>
        <td><%= bookitem.author %></td>
        <td><%= bookitem.description %></td>
        <td><%= link_to 'Show', bookitem %></td>
        <% if admin_signed_in? %>
                  <td><%= link_to 'Edit', edit_bookitem_path(bookitem) %></td>
          <td><%= link_to 'Destroy', bookitem, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% else%>
          <% if bookitem.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_bookitem_path(bookitem) %></td>
            <td><%= link_to 'Destroy', bookitem, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%end%>
        <%end%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bookitem', new_bookitem_path %>
